{
	"name": "@codelytv/devdash",
	"version": "0.1.0",
	"private": true,
	"engine": {
		"node": "^16.0.0",
		"npm": "^8.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodelyTV/devdash"
	},
	"author": "codelytv",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/CodelyTV/devdash/issues"
	},
	"homepage": ".",
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-scripts": "5.0.1"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "jest --watch --config=jest.config.js",
		"eject": "react-scripts eject",
		"cy:open": "cypress open",
		"cy:run": "cypress run",
		"lint": "eslint --ignore-path .gitignore . && stylelint **/*.scss",
		"lint:fix": "eslint --fix --ignore-path .gitignore . && stylelint --fix **/*.scss"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest",
			"eslint-config-codely/typescript"
		],
		"parserOptions": {
			"project": [
				"./tsconfig.json"
			]
		},
		"rules": {
			"@typescript-eslint/no-floating-promises": 0,
			"react/jsx-key": "error"
		},
		"settings": {
			"import/resolver": {
				"node": {
					"extensions": [
						".js",
						".jsx",
						".ts",
						".tsx"
					]
				}
			}
		},
		"overrides": [
			{
				"files": [
					"**/tests/e2e/**/*.spec.ts"
				],
				"rules": {
					"testing-library/await-async-query": 0,
					"@typescript-eslint/no-unsafe-member-access": 0,
					"@typescript-eslint/no-unsafe-call": 0,
					"testing-library/prefer-screen-queries": 0
				}
			}
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@swc/core": "^1.3.9",
		"@swc/jest": "^0.2.23",
		"@testing-library/cypress": "^8.0.3",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^13.5.0",
		"@types/jest": "^27.5.2",
		"@types/node": "^16.11.68",
		"@types/react": "^18.0.21",
		"@types/react-dom": "^18.0.6",
		"cypress": "^10.3.0",
		"eslint-config-codely": "^1.1.4",
		"identity-obj-proxy": "^3.0.0",
		"jest-transform-stub": "^2.0.0",
		"sass": "^1.55.0",
		"stylelint": "^14.14.0",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-standard-scss": "^3.0.0",
		"stylelint-order": "^5.0.0",
		"typescript": "^4.8.4"
	}
}
